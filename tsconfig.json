{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "strictNullChecks": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false,
        "isolatedModules": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "strictFunctionTypes": true,
        "allowJs": true,
        "lib": ["ESNext", "DOM"],
        "skipLibCheck": true,
        "noEmit": true,
        "paths": {
            "@/*": ["./src/*"],
            "@electron/*": ["./electron/*"]
        },
    },
    "references": [
        { "path": "./tsconfig.node.json" }
    ],
    "include": [
        "electron/types/AppFrame.ts",
        "electron/types/AppFrameName.ts",
        "src/**/*.ts",
        "src/**/*.d.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "components.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
